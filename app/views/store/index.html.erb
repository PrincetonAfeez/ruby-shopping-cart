<% if notice %>
<p id = "notice"><%= notice %></p>
<% end %>

<h2> Your Pragmatic Catalog </h2>

<% @products.each do |product| %>
  <div class="">
    <table boder="0">
      <h3><%= product.title %></h3>
      <hr style="border-top-style:dotted"/>
      <tr>
        <td>
          <%= image_tag(product.image_url) %>
        </td>
        <td>
          <div>
            <h4> Description: </h4>
            <%= sanitize(product.description) %>
          </div>
          <div class="row">
            <span class="col-md-1 col-xm-3"><%= number_to_currency( product.price) %></span>
            <span class="col-md-1 col-xm-3"><%= button_to 'Add to Cart', line_items_path(:product_id => product), :remote => true %></span>
          </div>
        </td>
      <tr>
    </table>
  </div>
<% end %>
