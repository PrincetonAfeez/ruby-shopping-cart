<p id="notice"><%= notice %></p>

<h2> Your Pragmatic Cart </h2>
<ul>
  <% @cart.line_items.each do |item| %>
    <li><%= item.product.title %> &times: <%= item.quantity %> <%= number_to_currency(item.total_price) %></li>
  <% end %>
</ul>
<h3>Total Price:</h3> 
<ul>
  <li> <%= number_to_currency(@cart.total_price) %></li>
</ul>
<%= button_to 'Empty cart', @cart, :method => :delete, :confirm => 'Are you sure?' %>
